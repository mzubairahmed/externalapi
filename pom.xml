						             <version>2.2</version>
						         </dependency>
						         <dependency>
						             <groupId>com.sun.xml.bind</groupId>
						             <artifactId>jaxb-xjc</artifactId>
						             <version>2.2</version>
						         </dependency>
		                    </dependencies>
		                </plugin>
		            </plugins>
